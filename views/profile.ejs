<%- include partials/header %>
    <%- include partials/navbar %>
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700,400italic|Source+Code+Pro:400,700'
        rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/css/post.css">
    <header>
        <h1><%=user.username%> Profile</h1>
        <h3>Registration Date: <%=user.date%></h3>
        
    </header>
    
    <main>
        <img src="<%=user.photo%>" alt="">
        <h2><%=user.username%> Posts</h2>
        <ul>
            <% for (let i = 0; i < user.posts.length; i++) { %>
                <li>
                    <a href="/posts/<%=user.posts[i]._id%>"><%=user.posts[i].title%></a>
                    <%=user.posts[i].date%>
                </li>
                <br>
            <% } %>    
        </ul>
    </main>

    </body>
</html>