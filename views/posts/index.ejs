<%- include ../partials/header %>
    <%- include ../partials/navbar %>

    <header>
        <h1>Posts</h1>
        <section>
            <a href="/posts/new">Create New Post</a>
        </section>
    </header>
    <main>
        <h2>List of Posts</h2>
        <ul>
            <% for(let i = 0; i < posts.length; i++){ %>
            <li>
                <a href="/posts/<%=posts[i]._id%>"><%=posts[i].title%></a>
                <br>
                <%=posts[i].body%>
            </li>
            <% } %>
            </ul>
    </main>

    </body>
</html>